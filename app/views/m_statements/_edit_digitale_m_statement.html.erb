<div id="<%= edit_form_dom_id %>">
  <h6 class='gg-title mt-5 mb-5 ml-2'>( ...now enumerate the 7 key events of your story )</h6>
  <% chapters = ['I', 'II', 'III', 'IIII', 'V', 'VI', 'VII'] %>
  <% i = digitale.m_statements.count %>
  <h2 class="gg-title text-center mb-1"><%= chapters[i] %></h2>
  <%= form_with model: @m_statement, method: 'put', authenticity_token: true, class: "nodeform" do |f| %>
    <%= hidden_field_tag(:digitale, digitale) %>
    <%= label_tag(:content, "m i g h t | | | m i g h t | n o t", class: "gg-label") %>
    <%= text_field_tag(:content, node.title, class: "form-text-input w-100 text-center text-muted") %>
    <%= label_tag(:description, "d e s c r i p t i o n", class: "gg-label") %>
    <div class="gg-textarea">
    	<%= text_area_tag(:description, node.content, size: "48x5", class: "form-textarea-input text-center text-muted") %>
    </div>
    <%= submit_tag('e d i t', class: "btn gg-button btn-lg btn-block") %>
  <% end %>
</div>