<div id="digitaleWhatIfForm">
  <%= form_with(url: "/what_ifs", method: 'post', authenticity_token: true, class: "nodeform") do |f| %>
    <%= hidden_field_tag(:digitale_id, digitale.id) %>
    <%= label_tag(:content, "w h a t | i f") %>
    <%= text_field_tag(:content, "e. g. three worlds ended all at once?", class: "form-text-input w-50 text-center text-muted") %>
     <%= label_tag(:description, "d e s c r i p t i o n") %>
     <%= text_area_tag(:description, "What if three worlds penetrating each other caused their mutual decline?", size: "24x6", class: "form-textarea-input w-50 text-center text-muted") %>
      <%= submit_tag('c r e a t e', class: "btn btn-outline-secondary btn-lg btn-block") %>
    <% end %>
</div>
