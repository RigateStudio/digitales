<div class="container d-flex flex-column justify-content-around w-100">
        
        <div class="nav d-flex justify-content-around" style="white-space: nowrap; text-align: center; margin-bottom: 10px; display: flex; flex-wrap: nowrap;">
          CREATE A NEW DIGITALE
        </div>
 
        <div style="width: 100%; padding-bottom: 20px; display: flex;">

          <div id="digitaleForm">

              <div id="digitaleTitleForm">
                <%= form_with model: @node, method: 'post', authenticity_token: true, class: "nodeform" do |f| %>
                  <%= hidden_field_tag(:type, "Tale") %>
                  <%= label_tag(:content, "t i t l e", class: 'gg-label') %>
                  <%= text_field_tag(:content, "e. g. t a l e s | o f | a t l a n t i s", class: "form-text-input w-50 text-center text-muted") %>
                  <%= label_tag(:description, "d e s c r i p t i o n", class: 'gg-label') %>
                  <div class="gg-textarea">
                    <%= text_area_tag(:description, "In the depths of a planet called Atlantis entirely covered with water survives a tribe of a few hundred people.", size: "48x5", class: "form-textarea-input text-center text-muted") %>
                  </div>
                  <%= submit_tag('c r e a t e', class: "btn gg-button btn-lg btn-block") %>
                <% end %>
              </div>

          </div>
          
        </div>
</div>