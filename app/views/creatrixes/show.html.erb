        <%else%>
            no pics
        <%end%>
        <h2><%= @creatrix.itself %></h2>
        <p class="lead"></p>    
    </div>
    
    <% if @creatrix == current_creatrix %>
        <div id="creatrix-details">
            <h3>My details: </h3>
            <p><strong> Email address </strong>: <%= @creatrix.email %></p>
              <a class="btn btn-secondary" href="#">
                e d i t
