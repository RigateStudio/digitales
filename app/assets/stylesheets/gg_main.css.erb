
/* COLORS */

.gg-primary {
	color: white;
	text-shadow: 0px 0px 3px black;
	background-color: rgba(255, 255,255, 0.95)
}

.gg-secondary {
	color: white;
	text-shadow: 0px 0px 12px;
	background-color: rgba(255, 255, 255, 0.05);
}

.gg-body {
	width: 100%;
	height: 100vh;
	background-color: black;

}

.gg-bg {
	width: 100%;
	height: 100vh;
	background: url("<%= asset_path 'gg_background.png' %>") center center no-repeat;
	background-size: 600px;
	overflow-y: scroll;
	overflow-x: hidden;
}


/* custom website's scrollbar
not supported in Firefox and IE */

/* total width */

.gg-bg::-webkit-scrollbar {
        background-color: transparent;
        margin-top: 44px;
        width: 8px;
}

/* background of the scrollbar except button or resizer */
.gg-bg::-webkit-scrollbar-track {
        background-color: transparent;
        margin-top: 44px;
}

/* scrollbar itself */
.gg-bg::-webkit-scrollbar-thumb {
        background-color: rgba(55, 55, 55, 0.7);
        border-radius: 16px;
}

/* set button(top and bottom of the scrollbar) */
.gg-bg::-webkit-scrollbar-button {
        display:none;
}


.gg-navbar {
	height: 88px;
	background-color: rgba(00, 00, 00, 0.6);
	border-bottom: solid 1px #555;
	display: flex;
	justify-content: space-around;
	align-items: center;
}


.gg-btn-primary {
	color: white;
	text-shadow: 0px 0px 3px black;
	background-color: rgba(255, 255,255, 0.95)
	padding: 55px;
	border-radius: 25px;
	box-shadow: 0px 0px 3px 3px black;

}

.gg-pool {
	margin-top: 88px;
	padding-top: 15px;
	max-height: 15000px;
	width: 100vw;
	background-color: rgba(16,16,16, 0.85);
	display: flex;
	flex-direction: column;
	flex-wrap: wrap;
	justify-content: flex-end;
	align-items: center;
}

.gg-pool-hidden-card {
	width: 255px;
	margin: 15px;
	border-radius: 25px;
	border: none;
}

.gg-pool-card-primary {
	width: 255px;
	margin: 15px;
	border-radius: 25px;
	border: solid  white 1px;
	box-shadow: 0px 0px 6px 3px white;

	color: white;
	text-shadow: 0px 0px 3px black;
	background-color: rgba(255, 255,255, 0.95);

	display: flex;
	flex-direction: column;
	justify-content: space-around;
	align-items: center;
}

.gg-pool-card-secondary {
	width: 255px;
	margin: 15px;
	border-radius: 25px;
	border: solid  white 1px;
	box-shadow: 0px 0px 6px 1px white;

	color: white;
	text-shadow: 0px 0px 12px;
	background-color: rgba(255, 255, 255, 0.05);

	display: flex;
	flex-direction: column;
	justify-content: space-around;
	align-items: center;
}


.gg-pool-card-tertiary {
	width: 255px;
	margin: 15px;
	border-radius: 25px;
	border: solid  #555 1px;
	color: rgba(55, 55, 55, 0.8);

	display: flex;
	flex-direction: column;
	justify-content: space-around;
	align-items: center;
}